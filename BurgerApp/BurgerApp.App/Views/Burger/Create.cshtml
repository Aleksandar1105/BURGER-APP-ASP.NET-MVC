@model BurgerViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-4">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2 text-white">Create burger:</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pt-3">
            <div class="col-md-12">
                <form asp-action="Create" method="post" class="row">
                    <div class="col-12">
                        <div class="border p-3">
                            <div class="form-floating py-2 col-12">
                                <input type="text" asp-for="Name" class="form-control border-1" />
                                <label asp-for="Name" class="ms-2"></label>
                            </div>
                            <div class="form-control mb-3 col-md-12">
                                <input type="checkbox" asp-for="IsVegetarian" />
                                <label asp-for="IsVegetarian" class="ms-2"></label>
                            </div>
                            <div class="form-control mb-3 col-md-12">
                                <input type="checkbox" asp-for="IsVegan" />
                                <label asp-for="IsVegan" class="ms-2"></label>
                            </div>
                            <div class="form-control mb-3 col-md-12">
                                <input type="checkbox" asp-for="HasFries" />
                                <label asp-for="HasFries" class="ms-2"></label>
                            </div>
                            <div class="form-control mb-3 col-md-12">
                                <label asp-for="Price" class="ms-2"></label>
                                <input type="number" asp-for="Price" />
                            </div>
                            <div class="form-floating py-2 col-12">
                                <input type="text" asp-for="ImageUrl" class="form-control border-1" />
                                <label asp-for="ImageUrl" class="ms-2"></label>
                            </div>
                        </div>
                        <div class="w-100 btn-group mb-3" role="group">
                            <button type="submit" class="btn btn-warning bg-gradient border-0 form-control mx-5 mt-3">Create</button>
                            <a class="btn btn-primary bg-gradient border-0 form-control mx-5 mt-3" asp-area="" asp-controller="Burger" asp-action="Index">Back to menu</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
