@model BurgerDetailsViewModel

<div class="container d-flex justify-content-center align-items-center">
    <div class="card px-4 py-2 text-center">
        <div class="row">
            <div class="col-md-12">
                <h3 class="text-center pb-2"><b>@Model.Name</b></h3>
                <img src="@Model.ImageUrl" alt="Burger Image" class="img-fluid mb-4 mt-2" width="450px">
                @if (Model.IsVegetarian)
                {
                    <h5 class="text-primary">Vegetarian</h5>
                    <hr />
                }
                else if (Model.IsVegan)
                {
                    <h5 class="text-primary">Vegan</h5>
                    <hr />
                }
                else
                {
                    <h5 class="text-danger">Not Vegetarian</h5>
                    <hr />
                    <h5 class="text-danger">Not Vegan</h5>
                    <hr />
                }
                @if (Model.HasFries)
                {
                    <h5 class="text-success">Burger with fries</h5>
                    <hr />
                }
                else
                {
                    <h5 class="text-danger">Burger without fries</h5>
                    <hr />
                }
                <h5>Price: <b>@Model.Price</b> ден.</h5>
            </div>
        </div>
        <div class="w-100 btn-group mb-3" role="group">
            <a class="btn btn-primary bg-gradient border-0 form-control mt-2" asp-area="" asp-controller="Burger" asp-action="Index">Back to menu</a>
        </div>
    </div>
</div>
