@model OrderViewModel

<div class="container">
    <h1>Edit Order</h1>
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label for="FullName">Full Name:</label>
            <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName">
        </div>
        <div class="form-group">
            <label for="Address">Address:</label>
            <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address">
        </div>
        <div class="form-group">
            <label for="IsDelivered">Is Delivered:</label>
            <input type="checkbox" class="form-control" id="IsDelivered" name="IsDelivered" checked="@Model.IsDelivered">
        </div>
        <div class="form-group">
            <label for="LocationId">Location:</label>
            <input type="text" class="form-control" id="LocationId" name="LocationId" value="@Model.LocationId">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>