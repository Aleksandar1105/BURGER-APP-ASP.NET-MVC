@model List<OrderViewModel>

<div class="container">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">List of Orders</h2>
            </div>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Address</th>
                <th>Is Delivered</th>
                <th>Location</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.FullName</td>
                    <td>@order.Address</td>
                    <td>@(order.IsDelivered ? "Yes" : "No")</td>
                    <td>@order.LocationId</td>
                    <td class="d-flex gap-2 m">
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@order.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this order?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary my-3">Create New Order</a>
</div>