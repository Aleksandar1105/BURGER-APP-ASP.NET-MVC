@model BurgerListViewModel

<div class="col-lg-3 col-sm-6">
    <div class="row p-2">
        <div class="col-12 p-1">
            <div class="card border-0 p-3 shadow border-top border-5 rounded">
                <img class="card-img-top" src="@Model.ImgUrl" alt="Card image cap">
                <div class="card-body pb-0">
                    <div class="pl-1 text-center">
                        <h5 class="card-title">@Model.Name</h5>
                    </div>
                    <div class="pl-1">
                        <p class="text-dark text-opacity-75 text-center">
                            <span>
                            Price: <b>@Model.Price</b> ден.
                                                        </span>
                        </p>
                    </div>
                </div>
                <div>
                    <a class="btn btn-primary bg-gradient border-0 form-control m-1" asp-action="Details" asp-route-id="@Model.Id">Details</a>
                    <a class="btn btn-danger bg-gradient border-0 form-control m-1" asp-area="" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
                    <a class="btn btn-secondary border form-control m-1" asp-area="" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>

